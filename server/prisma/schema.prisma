generator client {
    provider = "prisma-client-js"
    output   = "client"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model User {
    id        String   @id @default(auto()) @map("_id") @db.ObjectId
    email     String   @unique
    name      String
    avatarUrl String?
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@map("users")
}
